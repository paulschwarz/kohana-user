<form action="" method=post>

	{{#has_errors}}
	<ul class=errors>
		{{#errors}}
		<li><label for="{{key}}">{{error}}</label></li>
		{{/errors}}
	</ul>
	{{/has_errors}}

	{{#email}}
	<dt>
		<label for="{{id}}">{{label}}</label>
		{{#has_error}}<label for="{{id}}" class=error>{{error}}</label>{{/has_error}}
	</dt>
	<dd><input name="{{name}}" id="{{id}}"{{#has_error}} class="highlight bad"{{/has_error}} /></dd>
	{{/email}}

	{{#token}}
	<dt>
		<label for="{{id}}">{{label}}</label>
		{{#has_error}}<label for="{{id}}" class=error>{{error}}</label>{{/has_error}}
	</dt>
	<dd><input name="{{name}}" id="{{id}}"{{#has_error}} class="highlight bad"{{/has_error}} /></dd>
	{{/token}}

	<dd><input type=submit value="Reset password" /></dd>

</form>
